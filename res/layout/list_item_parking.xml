<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultLine.Content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/itemSymbole"
        style="@style/ItemSymbole"
        android:contentDescription="@string/parking"
        android:padding="5dp"
        android:src="@drawable/map_layer_parking" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@id/itemTitle"
            style="@style/ItemPrimaryText"
            android:layout_height="25dip" />

        <TextView
            android:id="@+id/itemDescription"
            style="@style/ItemSecondaryText.SingleLine" />
    </LinearLayout>

</LinearLayout>